
<div class="show-nugget-bg"> <!-- for the background image -->

  <div class="show-nugget-page">

    <div class="container">
      

      <div class="row">
        <div class="col">
          <%= image_tag("Mcemojis/happymeal.png", alt: "happymeal", class: "show-happymeal animated infinite pulse") %>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <p>
            <strong>Message:</strong>
            <%= @nugget.message %>
          </p>
        </div>
      </div>

      <div class="row font-awesome-show-edit-back-row">
        <div class="col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-sm-12 col-md-2 col-lg-2">
          <%= link_to '', edit_nugget_path(@nugget), class: "fa fa-pencil-square-o fa-4x yellow-fa-button" %> <!-- edit -->
        </div>
        <div class="col-sm-12 col-md-2 col-lg-2">
          <%= link_to '', nuggets_path, class: "fa fa-undo fa-4x yellow-fa-button" %> <!-- back button -->
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4"></div>
      </div><!-- end row div -->

      <div class="row">
        <div class="col">
          <p id="notice"><%= notice %></p>
        </div>
      </div>

    </div> <!-- end container div -->

  </div> <!-- end show-nugget-page -->

</div> <!-- end show-nugget-bg div -->
